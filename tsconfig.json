{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./",
		"rootDir": "./src",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist"
	]
}
